<template name="Recipe_edit">
	{{#autoForm collection=Recipes id="updateRecipeForm" type=type doc=recipe template="bootstrap3-horizontal" afFieldInput-placeholder="schemaLabel"}}
		<fieldset>
			{{> afQuickField name='name'}}
			{{> afQuickField name='description'}}
			{{> afQuickField name='source'}}
			{{> afQuickField name='servings'}}
			{{> afQuickField name='prep_time'}}
			{{> afQuickField name='cook_time'}}
			{{> afQuickField name='ingredients' type="textarea" rows=6 id="ingredientsTextArea"}}
			{{> afQuickField name='directions' type="textarea" rows=6}}
		</fieldset>
		<div class="btn-group">
			<button type="submit" class="btn btn-primary">Update</button>
			<button type="reset" class="btn btn-primary">Reset</button>
			<button type="button" class="btn btn-primary js-edit-item-cancel">Cancel</button>
		</div>
	{{/autoForm}}
</template>